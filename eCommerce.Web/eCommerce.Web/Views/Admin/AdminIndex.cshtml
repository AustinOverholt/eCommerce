@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">Users</h1>

<div class="">
    <table ng-cloak class="table-responsive table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Email Confirmed</th>
                <th>Access Failed Count</th>
                <th>Lockout Enabled</th>
                <th>Phone Number</th>
                <th>Phone Number Confirmed</th>
                <th>User Name</th>
                <th colspan="1">Toggle Admin</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="user in homeCtrl.users">
                <td>{{user.Id}}</td>
                <td>{{user.Email}}</td>
                <td>{{user.EmailConfirmed}}</td>
                <td>{{user.AccessFailedCount}}</td>
                <td>{{user.LockoutEnabled}}</td>
                <td>{{user.PhoneNumber}}</td>
                <td>{{user.PhoneNumberConfirmed}}</td>
                <td>{{user.UserName}}</td>
                <td>
                    <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editQuestion" ng-click="">Admin</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

